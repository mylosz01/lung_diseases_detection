@using Microsoft.AspNetCore.Identity

@model LungMed.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Create user for patient";
}

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <h5>Create new user for patient</h5>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Patient" class="control-label"></label>
                <select asp-for="Patient" class="form-control" asp-items="ViewBag.Patient"></select>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control"></>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control"></>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
                <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <div class="card-footer">
                        <div class="clearfix">
                            <a asp-action="Index" class="btn btn-danger push-left">Back to List</a>
                            <button type="submit" class="btn btn-primary">Register User</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>