@{
    ViewBag.Title = "Upload File";
}

<h2 class="text-center my-4">Upload File</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form enctype="multipart/form-data" asp-action="UploadFile" method="post" class="shadow p-4 rounded bg-light custom-form">
                <div class="form-group">
                    <label for="file" class="form-label">Choose a file to upload:</label>
                    <input type="file" class="form-control" id="file" name="file" required>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary mt-3">Upload</button>
                    <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
                </div>
            </form>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success mt-3 text-center">
                    <strong>@ViewBag.Message</strong>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .custom-form {
        background-color: #f7f9fc;
        border: 1px solid #d1d8e0;
    }
    .custom-form .form-group {
        margin-bottom: 1.5rem;
    }
    .custom-form .form-label {
        font-weight: bold;
        color: #4a4a4a;
    }
    .custom-form .form-control {
        border-radius: 0.25rem;
        border: 1px solid #ced4da;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }
    .custom-form .form-control:focus {
        border-color: #80bdff;
        outline: 0;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }
    .custom-form .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        padding: 0.5rem 1.5rem;
        font-size: 1rem;
        border-radius: 0.25rem;
        transition: background-color 0.15s ease-in-out, border-color 0.15s ease-in-out;
    }
    .custom-form .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }
    .alert-success {
        background-color: #d4edda;
        border-color: #c3e6cb;
        color: #155724;
    }
    .alert-success strong {
        color: #155724;
    }
</style>
