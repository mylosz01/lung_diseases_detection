@model LungMed.Models.HealthCard

@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <div class="col-md-6">
        <form method="post">
            <h5>HealthCard</h5>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Medicines" class="control-label"></label>
                <input asp-for="Medicines" class="form-control" />
                <span asp-validation-for="Medicines" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diseases" class="control-label"></label>
                <input asp-for="Diseases" class="form-control" />
                <span asp-validation-for="Diseases" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Allergies" class="control-label"></label>
                <input asp-for="Allergies" class="form-control" />
                <span asp-validation-for="Allergies" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BleedingDisorders" class="control-label"></label>
                <input asp-for="BleedingDisorders" class="form-control" />
                <span asp-validation-for="BleedingDisorders" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pregnancy" class="control-label"></label>
                @Html.DropDownListFor(model => model.Pregnancy, new SelectList(new List<string> { "True", "False" }), "Select...", new { @class = "form-control" })
                <span asp-validation-for="Pregnancy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PregnancyWeek" class="control-label"></label>
                <input asp-for="PregnancyWeek" class="form-control" />
                <span asp-validation-for="PregnancyWeek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatientId" class="control-label"></label>
                <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientId"></select>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <div class="card-footer">
                        <div class="clearfix">
                            <a asp-action="Index" class="btn btn-danger push-left">Back to List</a>
                            <button type="submit" class="btn btn-primary">Create</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
